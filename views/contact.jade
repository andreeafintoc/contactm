extends layout

block content
  h1= title
  //-p Welcome to #{title}

  div.container 	
    div.form-group
      label.col-sm-4 First Name
      div.col-sm-8
        input.form-control(
          placeholder='First Name',
          required=true,
          name='firstName',
          type='text',
          value=firstName)
    div.form-group
      label.col-sm-4 Last Name
      div.col-sm-8
        input.form-control(placeholder='Last name',
          required=true,
          name='name',
          type='text',
          value=name)
    div.form-group
      label.col-sm-4 Street address
      div.col-sm-8
        input.form-control(placeholder='e.g. 123 Sunny Ave',
          required=true,
          name='streetAddress',
          type='text',
          value=streetAddress)
    div.form-group
      label.col-sm-4 City
      div.col-sm-8
        input.form-control(placeholder='e.g. City',
          required=true,
          name='city',
          type='text',
          value=city)
    div.form-group
      div.col-sm-offset-4.col-sm-8
        button.login.btn.btn-primary(type='submit') Save

